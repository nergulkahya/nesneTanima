<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/colorgray"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AboutTwoPageFragment">

    <LinearLayout
        android:id="@+id/linearStart2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_hakkimda2"
            android:layout_width="230dp"
            android:layout_height="153dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="80dp"
            android:orientation="vertical"
            android:src="@drawable/image2" />

        <TextView
            android:id="@+id/hakkimda_text2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="80dp"
            android:text="@string/hakkimda_sayfasi2"
            android:textColor="@color/white"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="2"
            >
            <Button
                android:id="@+id/go_hakkimda_geri"
                android:layout_width="120dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"
                android:layout_below="@+id/hakkimda_text"
                android:background="@color/teal_700"
                android:text="Geri"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/go_hakkimda1"
                android:layout_width="120dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="50dp"

                android:layout_below="@+id/hakkimda_text"
                android:background="@color/teal_700"
                android:text="Ä°leri"
                android:textColor="@color/white"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>